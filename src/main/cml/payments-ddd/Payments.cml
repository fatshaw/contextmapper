/* The DDD Cargo sample application modeled in CML. Note that we split the application into multiple bounded contexts. */
ContextMap Payments {
    type SYSTEM_LANDSCAPE
    state AS_IS
    
    contains Transaction
    contains Clearing
    contains Settlement

    Clearing [D] <- [U] Transaction

    Settlement [D] <- [U] Clearing

}

BoundedContext Transaction {
}

BoundedContext Clearing {
}

BoundedContext Settlement {
}
